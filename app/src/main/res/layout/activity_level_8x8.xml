<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtVwgrid_g8_8"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/hvdcomicserifpro"
        android:text="Grid 8x8"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/level_g8_81"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVwgrid_g8_8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_9slice01"
        android:fontFamily="@font/snowdream"
        android:onClick="goToLevels"
        android:text="level 1"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/level_g8_82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_g8_81"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_9slice01"
        android:fontFamily="@font/snowdream"
        android:onClick="goToLevels"
        android:text="level 2"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/level_g8_83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_g8_82"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_9slice01"
        android:fontFamily="@font/snowdream"
        android:onClick="gameExit"
        android:text="level 3"
        android:textColor="@android:color/white" />
</RelativeLayout>
